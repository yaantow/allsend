{
    "name": "@bridgekit/adapter-whatsapp",
    "version": "0.1.0",
    "description": "WhatsApp adapter for BridgeKit multi-channel hub",
    "type": "module",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts"
        }
    },
    "scripts": {
        "dev": "bun build ./src/index.ts --outdir ./dist --target bun --watch",
        "build": "bun build ./src/index.ts --outdir ./dist --target bun && tsc --emitDeclarationOnly",
        "test": "bun test",
        "lint": "tsc --noEmit"
    },
    "dependencies": {
        "@bridgekit/core": "workspace:*",
        "whatsapp-web.js": "^1.23.0",
        "qrcode-terminal": "^0.12.0"
    },
    "devDependencies": {
        "@types/bun": "latest",
        "@types/qrcode-terminal": "^0.12.2",
        "typescript": "^5.3.3"
    },
    "license": "MIT"
}